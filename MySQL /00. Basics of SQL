# Create the Database 
CREATE DATABASE Bookstore;
USE Bookstore;

# Create Tables using different data types
CREATE TABLE Books (
BookID INT PRIMARY KEY AUTO_INCREMENT,
Title VARCHAR(255) NOT NULL,
Author VARCHAR(150) NOT NULL,
PublishDate DATE,
ISBN VARCHAR(13),
PRICE DECIMAL(5,2),
InStock TINYINT
);


CREATE Table Customers (
CustomerID INT PRIMARY KEY AUTO_INCREMENT,
FirtName VARCHAR(50) NOT NULL,
LastName VARCHAR(50) NOT NULL,
Email VARCHAR(100),
DateOfBirth DATE,
SignupDate TIMESTAMP DEFAULT current_timestamp
);


CREATE Table Orders(
OrderID INT PRIMARY KEY AUTO_INCREMENT,
CustomerID INT,
BookID INT,
OrderDate TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
FOREIGN KEY (CustomerID) REFERENCES Customers(CustomerID),
FOREIGN KEY (BookID) REFERENCES Books(BookID)
);


# Data Manipulation Language
# INSERT statements for adding books, customers, and orders into the Tables

INSERT INTO Books (Title, Author, PublishDate, ISBN, Price, InStock) 
VALUES ("The Great Gatsby', 'F. Scott Fitzgerald', '1925-04-10', '9780743273565', 10.99, 20");

INSERT INTO Books (Title, Author, PublishDate, ISBN, Price, InStock) 
VALUES ('Moby Dick', 'Herman Melville', '1851-10-18', '9781503280786', 12.99, 15);
